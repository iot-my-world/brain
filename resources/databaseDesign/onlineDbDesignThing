Table company {
  id string PK
  name string
  adminEmailAddress string
}

Table client {
  id string PK
  company string
  parentPartyType string
  parentId string
  adminEmailAddress string
}


Table user {
  id string PK
  username string
  password string
  name string
  surname string
  emailAddress string
  partyType string
  partyId string
  roles []string
}

table role {
  id string PK
  permissions []string
}

table device {
  id string PK
  imei string
  simCountryCode string
  simNumber string
  ownerPartyType string
  ownerId string
  assignedPartyType string
  assignedId string
}

table reading {
  id string PK
  imei string
  raw string
  deviceId string
  southCoordinate string
  eastCoordinate string
  timeStamp integer
  ownerId string
  assignedId string
}

Ref: user.roles < role.id
Ref: device.ownerId > company.id
Ref: device.ownerId > client.id
Ref: device.assignedId > company.id
Ref: device.assignedId > client.id
Ref: reading.deviceId > device.id
Ref: reading.ownerId > company.id
Ref: reading.ownerId > client.id
Ref: reading.assignedId > company.id
Ref: reading.assignedId > client.id
Ref: user.partyId > company.id
Ref: user.partyId > client.id